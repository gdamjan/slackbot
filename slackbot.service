[Unit]
Description=slack bot
After=network.target

[Service]
Type=simple

User=alarm
WorkingDirectory=/home/alarm/bot/
Environment=PYTHONUSERBASE=/home/alarm/bot/py-env
Environment=SLACKBOT_TOKEN=xxx
Environment=SLACKBOT_PING_INTERVAL=20
ExecStart=/home/alarm/bot/py-env/bin/slackbot stupid
Restart=always

[Install]
WantedBy=multi-user.target
